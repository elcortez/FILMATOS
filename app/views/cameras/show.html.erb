<div class="wrapper">
  <div class="container text-center">
  <h1> Check this item </h1>
    <div class="row">
      <div class="col-xs-12 col-sm-3">
        <div class="padded">
          <% if @camera.photo? %>
            <%= cl_image_tag @camera.photo.path, width: 200, height: 300, crop: :fill %>
          <% else %>
            <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_url 'camera.jpg' %>);">
            </div>
          <% end %>

        </div>
      </div>
      <div class="col-xs-12 col-sm-3 col-sm-offset-5">
        <div class="padded">
          <div class="card-form">
            <%= form_tag cameras_path, :method => :get do %>
            <%= text_field_tag :query_one, nil, :placeholder => 'From...' %>
            <%= text_field_tag :query_one, nil, :placeholder => 'To...' %>
            <h1><%= @camera.price %>â‚¬</h1>
            <p>Average price/day</p>
            <%= submit_tag 'BOOK IT!',  class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-3">
        <div class="padded">
          <div class="card-white">
            <p>Category: <%= @camera.category %></p>
            <p>Brand: <%= @camera.brand %></p>
            <p>Description: <%= @camera.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-3">
        <div class="padded">
          <div class="card-white">
            <p>Owner's email: <%= @camera.user.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
