<div class="wrapper-grey signup-height">
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
      <div class="card-signup">
        <h2 class="text-center">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
              <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Email & Password
                  </a>
                </h4>
              </div>
              <div id="collapseOne" class="panel-collapse collapse in padding-ten" role="tabpanel" aria-labelledby="headingOne">
                <%= f.input :email, required: true, autofocus: true, placeholder: "bob@apple.com" %>
                <%= f.input :password, required: true, placeholder: "*********", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, required: true, placeholder: "*********" %>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading" role="tab" id="headingTwo">
                <h4 class="panel-title">
                  <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Name & Contact details
                  </a>
                </h4>
              </div>
              <div id="collapseTwo" class="panel-collapse collapse padding-ten" role="tabpanel" aria-labelledby="headingTwo">
                <%= f.input :first_name, required: true, autofocus: true, placeholder: "Bob" %>
                <%= f.input :last_name, required: true, autofocus: true, placeholder: "The Sponge" %>
                <%= f.input :address, required: true, autofocus: true, placeholder: "16 Rue gaudelet, Paris" %>
                <%= f.input :phone_number, required: false, autofocus: true, placeholder: "0732124543" %>
                <%= f.input :photo, as: :attachinary %>
              </div>
            </div>
          </div>
        </div>
        <div class="">
          <%= f.button :submit, class: "btn btn-danger form-control" %>
        </div>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>