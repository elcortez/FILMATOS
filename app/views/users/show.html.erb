<div class="container">
<div class="tabs">
  <a class="tab active" data-target="#profile">
    <h3>My profile</h3>
  </a>
  <a class="tab" data-target="#my-camera-offer">
    <h3>The cameras I own</h3>
  </a>
  <a class="tab" data-target="#my-bookings">
    <h3>The cameras I rented as a renter</h3>
  </a>
  <a class="tab" data-target="#my-rentals">
    <h3>The cameras I rented as an owner</h3>
  </a>
</div>
 <h1>Voici mon dashboard</h1>

 <div class="tab-content" id="profile">
 <h2> My informations </h2>
 <ul>
   <li>First name: <%= @user.first_name %></li>
   <li>Last name: <%= @user.last_name %></li>
   <li>Phone number: <%= @user.phone_number %></li>
   <li>Email: <%= @user.email %></li>
   <li>Address: <%= @user.address %></li>
 </ul>
 </div>

  <div class="tab-content" id="my-camera-offer">
    <h2> The cameras I own </h2>
    <ol>
     <% @user.cameras.each do |camera| %>
     <li>
       <p> Brand: <%= camera.brand %></p>
       <p> Category: <%= camera.category %></p>
       <p> Price: <%= camera.price %>€/day</p>
       <p> Description: <%= camera.description %></p>
       <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, user_camera_path(current_user, camera), method: :delete, data: { confirm: "Are you sure to delete this camera?" }%>
     </li>
     <% end %>
    </ol>
  </div>

  <div class="tab-content" id="my-bookings">
  <h2> The cameras I rented as a renter </h2>
  <ol>
   <% @user.bookings.each do |booking| %>
   <li>
     <p> Camera brand: <%= booking.camera.brand %> - See the product</p>
     <p> Start date: <%= booking.start_date %></p>
     <p> End date: <%= booking.end_date %></p>
     <p>
      The owner is:
      <%= booking.camera.user.first_name %>
      - <%= booking.camera.user.last_name %>
      - <%= booking.camera.user.address %>
      - <%= booking.camera.user.phone_number %>
      - <%= booking.camera.user.email %>
     </p>
   </li>
   <% end %>
  </ol>
  </div>

  <div class="tab-content" id="my-rentals">
  <h2> The cameras I rented as an owner </h2>
  <ol>
    <% @user.cameras.each do |camera| %>
      <% if camera.bookings.first %>
        <li>
          <h3> <%= camera.brand %></h3>
          <ul>
            <% camera.bookings.each do |booking| %>
              <li>
                 <p> Camera brand: <%= booking.camera.brand %> - See the product</p>
                 <p> Start date: <%= booking.start_date %></p>
                 <p> End date: <%= booking.end_date %>€/day</p>
                 <p>
                  The renter is:
                  <%= booking.user.first_name %>
                  - <%= booking.user.last_name %>
                  - <%= booking.user.address %>
                  - <%= booking.user.phone_number %>
                  - <%= booking.user.email %>
                 </p>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    <% end %>
  </ol>
  </div>

</div>

